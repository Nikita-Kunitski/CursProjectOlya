@model IEnumerable<WebApplication1.Models.Speciality>

@{
    ViewData["Title"] = "Список специальностей";
}

<h2>Список специальностей</h2>

<p>
    <a asp-action="Create">Создать</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Code)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SpecialityAbbreviation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SpecialityName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Faculty)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Code)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SpecialityAbbreviation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SpecialityName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Faculty.FacultyAbbreviation)
            </td>
            <td>
                <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
            </td>
        </tr>
        }
    </tbody>
</table>
