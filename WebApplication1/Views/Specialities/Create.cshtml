@model WebApplication1.Models.Speciality

@{
    ViewData["Title"] = "Добавить специальность";
}

<h2>Новая специальность</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Code" class="control-label"></label>
                <input asp-for="Code" class="form-control" />
                <span asp-validation-for="Code" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SpecialityAbbreviation" class="control-label"></label>
                <input asp-for="SpecialityAbbreviation" class="form-control" />
                <span asp-validation-for="SpecialityAbbreviation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SpecialityName" class="control-label"></label>
                <input asp-for="SpecialityName" class="form-control" />
                <span asp-validation-for="SpecialityName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Faculty" class="control-label"></label>
                <select asp-for="Faculty.FacultyAbbreviation" class="form-control" asp-items="ViewBag.FacultyId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Отмена</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
